// crie uma função capaz de receber 3 números a, b e c e retornar quantos são pares
#include <stdio.h>

int contar_pares(int a, int b, int c) {
    int count = 0;
    if (a % 2 == 0) count++;
    if (b % 2 == 0) count++;
    if (c % 2 == 0) count++;
    return count;
}

int main() {
    int a, b, c;
    scanf("%d %d %d", &a, &b, &c);
    printf("%d\n", contar_pares(a, b, c));
    return 0;
}
